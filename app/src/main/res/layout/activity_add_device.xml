<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_device">

    <EditText
        android:id="@+id/addDeviceName"
        android:layout_width="378dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Введите название устройства"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addDevice"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="162dp"
        android:layout_height="73dp"
        android:text="Продолжить"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />

    <Spinner
        android:id="@+id/DeviceAddingSp"
        android:layout_width="373dp"
        android:layout_height="57dp"
        app:layout_constraintBottom_toTopOf="@+id/addDevice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addDeviceName"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/WifiDeviceInfo"
        android:layout_width="376dp"
        android:layout_height="325dp"
        app:layout_constraintBottom_toTopOf="@+id/addDevice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DeviceAddingSp"
        app:layout_constraintVertical_bias="0.458" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="77dp"
        android:layout_height="69dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.973" />

    <TextView
        android:id="@+id/Progresstv"
        android:layout_width="148dp"
        android:layout_height="65dp"
        android:text="TextView"
        android:textSize="18dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />

    <CheckBox
        android:id="@+id/checkBoxManual"
        android:layout_width="363dp"
        android:layout_height="30dp"
        android:text="Выбрать вручную"
        app:layout_constraintBottom_toTopOf="@+id/WifiDeviceInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DeviceAddingSp" />

    <EditText
        android:id="@+id/ed_ip"
        android:layout_width="373dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="Введите ip адрес"
        android:visibility="invisible"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxManual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addDeviceName" />

</androidx.constraintlayout.widget.ConstraintLayout>